# Configuration serveur
PORT=3000
NODE_ENV=production

# Sécurité JWT - IMPORTANT: Générer une clé secrète unique et longue
# Commande: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=VOTRE_CLE_SECRETE_ICI

# Durée de validité du token (en heures)
JWT_EXPIRES_IN=24

# Compte admin initial (créé au premier démarrage)
ADMIN_EMAIL=admin@exemple.com
ADMIN_PASSWORD=VotreMotDePasse
